function sumDigits(n) {
  // Good luck!
let sum = 0;
let num = 0;
if(/[a-zA-z]/.test(n)){
  let array = n.split("");
  for(let i in array){
  sum += parseInt(array[i],16)
  }
}
else{
  num = parseInt(n);
  num = num.toString().split("");
for(let i in num){
  sum += Number(num[i]);
}


}
console.log(num);



console.log(sum);
return sum

}
sumDigits("f0e");
