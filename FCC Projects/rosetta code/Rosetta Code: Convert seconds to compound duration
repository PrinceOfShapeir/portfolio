function convertSeconds(sec) {
  // Good luck!
  let second = 1;
  let minute = 60 * second;
  let hour = 60 * minute;
  let day = 24 * hour;
  let week = 7 * day;

  let remainder = sec;
  let output = "";

  console.log(week)

  while(remainder>0){
          console.log(remainder);

break;
    switch(remainder){

      case(remainder%week>=0):
        output = output.concat((remainder - remainder%week).toString()+ " wk,")
      remainder = remainder%week;
      console.log(remainder);
      break;

      case (remainder%day>=0):
      output = output.concat((remainder -remainder%day).toString(), + " d,");
      remainder = remainder%day;
      console.log(remainder);
      break;

      case (remainder%hour>=0):
        output = output.concat((remainder - remainder%hour).toString()+ " hr,");
        remainder = remainder% hour;
        console.log(remainder);
        break;

        case(remainder%minute>=0):
        output = output.concat((remainder - remainder%minute).toString() + " min,");
        remainder = remainder%minute;
        console.log(remainder);
        break;

        case (remainder>0):
          output.concat((remainder).toString() + " sec,");
          remainder = 0;
          console.log(remainder);
          break;

        default:
        console.log("what");
        console.log(remainder);
        break;

      console.log(remainder);

    }


  }
//remove trailing comma
  output = output.slice(0,-1);

  // seconds in week 604800
  
  return output;
}
convertSeconds(999999);
